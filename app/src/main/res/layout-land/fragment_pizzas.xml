<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.antoine.pizzeria.PizzaFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@color/colorBackground"
            android:orientation="horizontal">

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btnNapo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Napolitaine" />

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btnRoya"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Royale" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@color/colorBackground"
            android:orientation="horizontal">

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btnFrom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Quatre Fromages" />

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btnMont"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Montagnarde" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@color/colorBackground"
            android:orientation="horizontal">

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btnRacl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Raclette" />

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btnHawa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Hawai" />
        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@color/colorBackground"
            android:orientation="horizontal">

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btnPann"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Panna Cotta" />

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btnPers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:text="Pizza personnalisée" />

            <Button
                android:layout_margin="5dp"
                android:id="@+id/btnTira"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Tiramisu" />
        </LinearLayout>

        <Button
            android:layout_margin="5dp"
            android:id="@+id/btnRein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.005"
            android:text="Réinitialiser" />

    </LinearLayout>
</FrameLayout>